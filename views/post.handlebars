<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
</div>
<form class="form update-form" data-post_id={{id}}>
  <div class="form-group">
    <textarea class="form-input" id="update-name" name="update-name" placeholder="{{name}}"></textarea>
  </div>
  <div class="form-group">
    <textarea class="form-input" id="update-desc" name="update-desc" placeholder="{{description}}"></textarea>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary">Update</button>
  </div>
</div>
</form>


<div class="row mt-4">
  <div class="col-md-6 container">
    <h3>Add a comment:</h3>
    <form class="form new-comment-form">
      <div class="form-group">
        <label for="comment">Comment:</label>
        <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
      </div>
      <div class="form-group">
        <button id="add-comment" type="submit" class="btn btn-primary">Add Comment</button>
      </div>
    </form>
  </div>
</div>
<div>


{{#if comments.length}}
<div class="col-md-6 comment-list flex container">
  <h3>Comments:</h3>
  {{#each comments as |comment|}}
  <div class="row mb-2">
    <div class="col-md-8">
      <h4><a href="/comment/{{comment.id}}">{{comment.body}}</a></h4>
    </div>
    <div class="col-md-4">
      <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">DELETE</button>
    </div>
  </div>
  {{/each}}
</div>
{{/if}}

<script src="/js/blog.js"></script>