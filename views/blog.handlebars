<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.username}} on {{format_date date_created}}</p>
  <div>
    <h3>Comments</h3>
    {{#each comments as |comment| }}
    <div class="row mb-4 comment">
      <div class="col-md-5">
        <p>Created by {{comment.user.username}} on {{format_date comment.date_created}}</p>
      </div>
      <div class="col-md-7">
        <p>
        {{comment.details}}
        </p>
      </div>
    </div>
    {{/each}}
  </div>
  {{#if logged_in}}
  <h3>Add Comment</h3>
  <form class='form comment-form'>
    <input type="hidden" name='blog-id' value='{{id}}'>
    <div class="form-group">
      <label for="comment-details" class='form-label'>Comment</label>
      <textarea name="comment-details" id="comment-details" class='form-input' cols="30" rows="10"></textarea>
    </div>
    <div class='form-group'>
      <button class="btn btn-primary" type="submit">Submit</button>
    </div>
  </form>
</div>
{{/if}}

<script src='/js/comment.js'></script>